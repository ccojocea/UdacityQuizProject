<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:spinnerItemStyle">@style/mySpinnerItemStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondaryLight</item>
    </style>

    <style name="AnswerText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/answer_text_layout_height</item>
        <item name="android:textColor">@color/textNormalAnswer</item>
        <item name="android:background">@drawable/bg_select</item>
        <item name="android:textSize">@dimen/answer_font_size</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">@dimen/layout_margin_xxs</item>
        <item name="android:button">@null</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="QuestionText">
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="android:textSize">@dimen/question_font_size</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin_xs</item>
    </style>

    <style name="AboutText">
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="android:textSize">@dimen/about_font_size</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin_xs</item>
    </style>

    <style name="AboutTextLink">
        <item name="android:textColorLink">@color/colorSecondaryDark</item>
        <item name="android:textColorLinkInverse">@color/colorSecondaryLight</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/about_font_size</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin_xs</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:background">@drawable/bg_lin_layout</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textVisiblePassword</item>
    </style>

    <style name="QuestionImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/layout_margin_xs</item>
        <item name="android:padding">@dimen/image_padding</item>
        <item name="android:background">@drawable/imageview_border</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:background">@drawable/bg_spinner_selector</item>
        <item name="android:dropDownSelector">@color/colorSecondary</item>
    </style>

</resources>
