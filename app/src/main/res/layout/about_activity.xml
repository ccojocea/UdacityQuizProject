<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/padding"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    android:paddingTop="@dimen/padding"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/udacity_logo_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/udacity500"
        android:adjustViewBounds="true"
        android:layout_marginBottom="@dimen/layout_margin_xs"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logo_cc_1"
        style="@style/AboutText"
        android:paddingRight="@dimen/padding"
        android:paddingLeft="@dimen/padding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding"
        android:paddingRight="@dimen/padding">

        <TextView
            android:id="@+id/about_clickable_link_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to_be_replaced"
            style="@style/AboutTextLink"
            android:layout_marginRight="@dimen/layout_margin_xs"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logo_cc_3"
            style="@style/AboutText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/padding"
        android:paddingLeft="@dimen/padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logo_cc_4_source"
            style="@style/AboutText"
            android:layout_marginRight="@dimen/layout_margin_xs" />

        <TextView
            android:id="@+id/about_clickable_link_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to_be_replaced"
            style="@style/AboutTextLink" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="@dimen/padding"
        android:paddingLeft="@dimen/padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logo_cc_6_licensed"
            style="@style/AboutText"
            android:layout_marginRight="@dimen/layout_margin_xs"/>

        <TextView
            android:id="@+id/about_clickable_link_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to_be_replaced"
            style="@style/AboutTextLink" />
    </LinearLayout>


</LinearLayout>