                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/q12" />

                        <TextView
                            android:id="@+id/text_view_q12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/layout_margin_xxs"
                            android:text=""
                            android:textColor="@color/colorSecondaryLight" />

                        <EditText
                            android:id="@+id/q12_edit_text"
                            style="@style/EditTextStyle"
                            android:hint="@string/h12"
                            android:imeOptions="actionDone" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/submit_score_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:background="@drawable/bg_button_select"
                    android:onClick="checkAnswers"
                    android:shadowColor="@color/colorSecondaryDark"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    android:text="@string/final_score_button"
                    android:textSize="@dimen/question_font_size" />

            </LinearLayout>

            <!--Mask layout to block input after ending quiz-->
            <LinearLayout
                android:id="@+id/image_mask"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.1"
                android:background="#B0000000"
                android:onClick="doNothingClick"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>

