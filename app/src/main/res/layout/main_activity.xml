            android:text="@string/a61"
            style="@style/AnswerText"
            />

        <CheckBox
            android:id="@+id/q6_a2_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a62"
            style="@style/AnswerText"
            />

        <CheckBox
            android:id="@+id/q6_a3_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a63"
            style="@style/AnswerText"
            />

        <CheckBox
            android:id="@+id/q6_a4_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a64"
            style="@style/AnswerText"
            />

        <TextView
            android:id="@+id/question7_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/question_font_size"
            android:text="@string/q7"/>

        <CheckBox
            android:id="@+id/q7_a1_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a71"
            style="@style/AnswerText"
            />

        <CheckBox
            android:id="@+id/q7_a2_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a72"
            style="@style/AnswerText"
            />

        <CheckBox
            android:id="@+id/q7_a3_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a73"
            style="@style/AnswerText"
            />

        <CheckBox
            android:id="@+id/q7_a4_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a74"
            style="@style/AnswerText"
            />

        <TextView
            android:id="@+id/question8_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/question_font_size"
            android:text="@string/q8"/>

        <CheckBox
            android:id="@+id/q8_a1_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a81"
            style="@style/AnswerText"
            />

        <CheckBox
            android:id="@+id/q8_a2_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a82"
            style="@style/AnswerText"
            />

        <CheckBox
            android:id="@+id/q8_a3_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a83"
            style="@style/AnswerText"
            />

        <CheckBox
            android:id="@+id/q8_a4_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a84"
            style="@style/AnswerText"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edited_answer"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/question_font_size"
            android:text="@string/q9"/>

        <EditText
            android:id="@+id/q9_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/h9"
            android:maxLines="1"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/question_font_size"
            android:text="@string/q10"/>

        <EditText
            android:id="@+id/q10_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/h10"
            android:maxLines="1"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/question_font_size"
            android:text="@string/q11"/>

        <EditText
            android:id="@+id/q11_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/h11"
            android:maxLines="1"
            android:inputType="text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/question_font_size"
            android:text="@string/q12"/>

        <EditText
            android:id="@+id/q12_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/h12"
            android:maxLines="1"
            android:inputType="text"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check your answers"
            android:onClick="checkAnswers"/>

    </LinearLayout>

</ScrollView>