<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_scroll_view"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="@dimen/padding">

    <LinearLayout
        android:id="@+id/base_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_question1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/single_answer"/>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/single_answer"/>

        <TextView
            android:id="@+id/question1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q1"
            android:textSize="@dimen/question_font_size" />

        <RadioGroup
            android:id="@+id/q1_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q1_a1_radio_button"
                style="@style/AnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a11" />

            <RadioButton
                android:id="@+id/q1_a2_radio_button"
                style="@style/AnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a12" />

            <RadioButton
                android:id="@+id/q1_a3_radio_button"
                style="@style/AnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a13" />

            <RadioButton
                android:id="@+id/q1_a4_radio_button"
                style="@style/AnswerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a14" />

        </RadioGroup>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardview_question2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="100dp">

            <TextView
                android:id="@+id/question2_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q2"
                android:textSize="@dimen/question_font_size" />

            <RadioGroup
                android:id="@+id/q2_radio_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/q2_a1_radio_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/a21"
                    style="@style/AnswerText"
                    />

                <RadioButton
                    android:id="@+id/q2_a2_radio_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/a22"
                    style="@style/AnswerText"
                    />

                <RadioButton
                    android:id="@+id/q2_a3_radio_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/a23"
                    style="@style/AnswerText"
                    />

                <RadioButton
                    android:id="@+id/q2_a4_radio_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/a24"
                    style="@style/AnswerText"
                    />

            </RadioGroup>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/question3_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q3"
            android:textSize="@dimen/question_font_size" />

        <RadioGroup
            android:id="@+id/q3_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q3_a1_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a31"
                style="@style/AnswerText"
                 />

            <RadioButton
                android:id="@+id/q3_a2_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a32"
                style="@style/AnswerText"
                 />

            <RadioButton
                android:id="@+id/q3_a3_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a33"
                style="@style/AnswerText"
                 />

            <RadioButton
                android:id="@+id/q3_a4_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a34"
                style="@style/AnswerText"
                 />

        </RadioGroup>

        <TextView
            android:id="@+id/question4_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q4"
            android:textSize="@dimen/question_font_size" />

        <RadioGroup
            android:id="@+id/q4_radio_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q4_a1_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a41"
                style="@style/AnswerText"
                 />

            <RadioButton
                android:id="@+id/q4_a2_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a42"
                style="@style/AnswerText"
                 />

            <RadioButton
                android:id="@+id/q4_a3_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a43"
                style="@style/AnswerText"
                 />

            <RadioButton
                android:id="@+id/q4_a4_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/a44"
                style="@style/AnswerText"
                 />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multiple_answer"/>

        <TextView
            android:id="@+id/question5_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/question_font_size"
            android:text="@string/q5"/>

        <CheckBox
            android:id="@+id/q5_a1_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a51"
            style="@style/AnswerText"
            />

        <CheckBox
            android:id="@+id/q5_a2_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a52"
            style="@style/AnswerText"
            />

        <CheckBox
            android:id="@+id/q5_a3_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a53"
            style="@style/AnswerText"
            />

        <CheckBox
